syntax on
set nocompatible
set number
set relativenumber
set showcmd
" always show status line at bottom
set laststatus=2
" case-insensitive search when using lowercase
set ignorecase
set smartcase
" search while typing
set incsearch
" enable mouse
set mouse+=a
" indent
" 1 tab = 4 space
set expandtab
set tabstop=4
set shiftwidth=4
set autoindent
set shiftround
set smarttab
filetype indent on

" theme
set bg=dark
colorscheme gruvbox

